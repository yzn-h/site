---
import BaseHead from "../components/BaseHead.astro";

import { Font } from "astro:assets";

import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="ar" dir="rtl">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="h-[100svh] grid place-content-center relative"
    style="background-color: #141313"
  >
    <div
      class="absolute rotate-45 bg-amber-400 translate-14 w-72 text-center font-extrabold p-2"
      style="background: repeating-linear-gradient( -45deg, #000000 5px, #000000 15px, #FED402 15px, #FED402 25px );"
    >
      <div class="bg-[#FED402]">قيد العمل</div>
    </div>
    <main class="place-content-center flex flex-col gap-8 items-center z-10">
      <div class="flex flex-col items-center gap-3">
        <h1 class="font-plex font-bold text-4xl text-white">موقع يزن</h1>
        <p class="font-plex text-lg text-white/60" aria-hidden="true">yzn-h</p>
      </div>

      <div class="flex items-center gap-4">
        <a
          href="https://github.com/yzn-h"
          aria-label="GitHub Profile"
          class="focus-visible:outline-2 rounded-full focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            style="height: 28px; opacity: 60%;"
            aria-hidden="true"
            viewBox="0 0 98 96"
            ><path
              fill="white"
              fill-rule="evenodd"
